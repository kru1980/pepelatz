<% include ../layout/header.ejs %>

<div class="main">
  <div class="container">
    <div class="content add-post">
      <form method="post" class="post-form">
        <div class="form-group">
          <label for="post-title">Заголовок</label>
          <input type="text" id="post-title" name="title" value="" />
        </div>
        <div class="form-group">
          <label for="post-body">Текст</label>
          <!-- <textarea id="post-body"></textarea> -->
          <div id="post-body"></div>
        </div>
        <input type="hidden" id="post-id" name="postId" value="" />

        <div id="fileinfo">
          <label for="file" class="custom-file-upload">
            <input type="file" name="file" id="file" required /> +
          </label>
        </div>

        <div class="buttons">
          <button class="save-button secondary-inverse">
            Сохранить как черновик
          </button>
          <button class="publish-button">Опубликовать</button>
        </div>
      </form>
    </div>
    <% include ../layout/sidebar.ejs %>
  </div>
</div>

<% include ../layout/footer.ejs %>
